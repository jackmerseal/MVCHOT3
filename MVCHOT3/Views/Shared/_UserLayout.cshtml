@{
	Layout = "_Layout.cshtml";
	string c = ViewContext.RouteData.Values["controller"].ToString() ?? "";
	string a = ViewContext.RouteData.Values["action"].ToString() ?? "";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary text-light border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between navbar-nav me-auto">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(User.IsInRole("Admin") && ViewContext.RouteData.Values["controller"].ToString() == "Product" && ViewContext.RouteData.Values["action"].ToString() == "Products" ? "active" : "")" asp-area="" asp-controller="Product" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(User.IsInRole("Admin") && ViewContext.RouteData.Values["controller"].ToString() == "Technician" && ViewContext.RouteData.Values["action"].ToString() == "Technicians" ? "active" : "")" asp-area="" asp-controller="Technician" asp-action="Technicians">Technicians</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(User.IsInRole("Admin") && ViewContext.RouteData.Values["controller"].ToString() == "Customer" && ViewContext.RouteData.Values["action"].ToString() == "Customers" ? "active" : "")" asp-area="" asp-controller="Customer" asp-action="Customers">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Bowling Ball" && ViewContext.RouteData.Values["action"].ToString() == "List" ? "active" : "")" asp-area="" asp-controller="Bowling Ball" asp-action="Bowling Balls">Bowling Balls</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark">
                                <span class="text-light">Welcome, @User.Identity.Name!</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-action="Logout" asp-controller="Account" asp-area="">
                                <button type="submit" class="btn btn-link nav-link">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Register" ? "active" : "")" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login" ? "active" : "")" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
