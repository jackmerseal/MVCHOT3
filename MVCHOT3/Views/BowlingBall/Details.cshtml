@model MVCHOT3.Models.BowlingBall
@{
	ViewBag.Title = "Bowling Ball Details";
}
<h1>Bowling Ball Details</h1>

<input type="hidden" value="@Model.Id" />
<div class="row">
    <div class="col"></div>
    <div class="col">
        <div class="card" style="width: 18rem;">
            <img src="@Model.ImageFileName" class="card-img-top" alt="...">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.Name</li>
                    <li class="list-group-item">@Model.Brand</li>
                    <li class="list-group-item">@Model.Price.ToString("C")</li>
                    <li class="list-group-item"><a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary">Add to Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div> 